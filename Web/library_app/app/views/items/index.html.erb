<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
  <%= form_tag items_path, :method => 'get' do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
      <th>Author</th>
      <th>Title</th>
      <th>Isbn</th>
      <th>Avaliability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.author %></td>
        <td><%= item.title %></td>
        <td><%= item.ISBN %></td>
        <td><%= item.avaliability %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item)  if admin? || is_lib? %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }   if admin? || is_lib?  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path   if admin? || is_lib?  %> </br>
